server {
  listen 5050;
  server_name _;
  root /usr/share/nginx/html;
  index index.html;

  gzip on;
  gzip_types text/plain application/javascript text/css application/json;
  gzip_min_length 256;

  set $img_service "$IMAGE_SERVICE_URL";

  location /api/images {
    proxy_pass $img_service;
  }

  location / {
    try_files $uri $uri/ =404;
  }
}
